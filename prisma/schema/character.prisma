model Character {
    id              String      @unique @id
    createdAt       DateTime
    updatedAt       DateTime

    // Owner
    ownerId         String
    owner           User        @relation("CharacterOwner", fields: [ownerId], references: [id])

    // Permissions
    viewers         User[]      @relation("CharacterViewers")
    public          Boolean     @default(false)

    // Character Cards
    cards           card[]      @relation("CharacterCards")

    // Campaigns
    campaigns       Campaign[]  @relation("CharacterCampaign")

    // Character Info
    name            String
    subtitle        String
    image           String
    description     String
    mechanics       Json

    // Deck
    deck            Json
}
