// Cards
model card {
  // DB Info
  id String @id @unique @default(dbgenerated("(concat('card:', gen_random_uuid()))::TEXT"))
  creatorId String
  createdAt DateTime
  updatedAt DateTime
  userIds String[]
  campaignIds String[]
  characterIds String[]
  // Card Info
  name String
  type String
  subtitle String
  icon String
  description String
  image Json
  stylePreset String
  style Json
  systems String[]
  mechanics Json
}