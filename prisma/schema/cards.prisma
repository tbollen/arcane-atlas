// Cards
model card {
  // DB Info
  id            String              @id @unique
  createdAt     DateTime
  updatedAt     DateTime

  // Owner
  ownerId       String
  owner         User                @relation("CardOwner", fields: [ownerId], references: [id])

  // Permissions
  editors       User[]              @relation("CardEditors")
  viewers       User[]              @relation("CardViewers")
  public        Boolean             @default(false)

  // Characters
  characters  Character[]           @relation("CharacterCards")

  // Card Info
  name String
  type String
  subtitle String
  icon String
  description String
  image Json
  stylePreset String
  style Json
  systems String[]
  mechanics Json
}