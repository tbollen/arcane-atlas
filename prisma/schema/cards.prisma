// Cards
model card {
  // DB Info
  id            String              @id @unique @default(dbgenerated("(concat('card:', gen_random_uuid()))::TEXT"))
  createdAt     DateTime
  updatedAt     DateTime

  // Owner
  ownerId       String
  owner         User                @relation("CardOwner", fields: [ownerId], references: [id])

  // Permissions
  editors       User[]              @relation("CardEditors")
  viewers       User[]              @relation("CardViewers")
  public        Boolean

  // Card Info
  name String
  type String
  subtitle String
  icon String
  description String
  image Json
  stylePreset String
  style Json
  systems String[]
  mechanics Json
}